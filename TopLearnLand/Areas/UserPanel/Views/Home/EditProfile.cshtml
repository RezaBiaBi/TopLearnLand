
@model TopLearnLand_Core.DTOs_ViewModels_.EditProfileViewModel
@{
    ViewData["Title"] = "ویرایش حساب کاربری" + User.Identity.Name;
}

<style type="text/css">
    .mizekar li:hover {
        background-color: #f2f2f2 !important;
        box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.3);
    }

    .mizekar li a:hover {
        margin-right: 7px
    }

    .activeli {
        background-color: #f2f2f2 !important;
        box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.3);
    }

        .activeli a {
            color: green;
            margin-right: 10px;
        }

    .boxshadow:hover {
        box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.5);
    }

    .boxshadow {
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
    }

    .margin {
        margin-right: 6px;
    }

    .margin a:hover {
            color: cornflowerblue;
    }
</style>

<div class="container" style="height: 100px;">
    <nav class="" aria-label="breadcrumb" style="height: 50px">
        <ul class="breadcrumb thumbnail img-rounded boxshadow">
            <li class="breadcrumb-item margin"><a href="#">تاپ لرن</a></li>
            <li class="breadcrumb-item margin"><a href="/UserPanel">پنل کاربری</a></li>
            <li class="breadcrumb-item margin active" aria-current="page"> ویرایش حساب کاربری @Model.UserName </li>
        </ul>
    </nav>
</div>
<hr />
<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>
                        <partial name="_SideBar" />
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content boxshadow">
                        <header><h1 class="alert alert-info text-center" style="font-size: 20px"> ویرایش حساب کاربری | @User.Identity.Name </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="EditProfile" role="form" enctype="multipart/form-data" method="post">

                                <div asp-validation-summary="All" class="input-validation-error alert-danger"></div>
                                <hr />
                                <input type="hidden" asp-for="AvatarName" />
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="username"><i class="zmdi zmdi-account"></i></span>
                                            <input asp-for="UserName" type="text" class="form-control" placeholder="نام و نام خانوادگی" aria-describedby="username" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: left center; cursor: auto;">
                                        </div>
                                        <span class="alert-danger" asp-validation-for="UserName"></span>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                                            <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                                        </div>
                                        <span class="alert-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <p class="help-block">آواتار</p>
                                        <input type="file" asp-for="UserAvatar" />
                                        <br />
                                        <img class="thumbnail img-rounded" src="/UserAvatar/@Model.AvatarName" style="max-width: 150px" />
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> ویرایش اطلاعات </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>


