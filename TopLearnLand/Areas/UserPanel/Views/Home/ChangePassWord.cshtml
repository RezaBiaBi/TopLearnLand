
@model TopLearnLand_Core.DTOs_ViewModels_.ChangePassWordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور" + User.Identity.Name;
}

<style type="text/css">
    .mizekar li:hover {
        background-color: #f2f2f2 !important;
        box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.3);
    }

    .mizekar li a:hover {
        margin-right: 7px
    }

    .boxshadow:hover {
        box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.5);
    }

    .boxshadow {
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
    }
</style>

<div class="container">
    <nav aria-label="breadcrumb">
        <ul class="breadcrumb thumbnail img-rounded boxshadow">
            <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
            <li class="breadcrumb-item"><a href="/UserPanel">پنل کاربری</a></li>
            <li class="breadcrumb-item active" aria-current="page"> تغییر کلمه عبور @User.Identity.Name</li>
        </ul>
    </nav>
</div>
<hr />
<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <aside>
                        <partial name="_SideBar" />
                    </aside>
                </div>
                <div class="col-md-9 col-sm-8 col-xs-12">
                    <section class="user-account-content boxshadow">
                        <header><h1 class="alert alert-info text-center" style="font-size: 20px"> تغییر کلمه عبور | @User.Identity.Name </h1></header>
                        <div class="inner form-layer">
                            <form asp-action="ChangePassWord" role="form" method="post">

                                @if (ViewBag.IsSuccess != null)
                                {
                                    <div class="alert alert-success">
                                        کلمه عبور شما با موفقیت ویرایش شد
                                    </div>
                                }
                                <div asp-validation-summary="All" class="input-validation-error alert-danger"></div>
                                <hr/>
                                <div class="row">
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock-open"></i></span>
                                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="کلمه عبور فعلی" aria-describedby="username" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: left center; cursor: auto;">
                                        </div>
                                        <span class="alert-danger" asp-validation-for="OldPassword"></span>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                                            <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور جدید" aria-describedby="email-address">
                                        </div>
                                        <span class="alert-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <div class="input-group">
                                            <span class="input-group-addon" id="password"><i class="zmdi zmdi-lock"></i></span>
                                            <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار کلمه عبور جدید" aria-describedby="email-address">
                                        </div>
                                        <span class="alert-danger" asp-validation-for="RePassword"></span>
                                    </div>
                                    <br/>
                                    <div class="col-md-7 col-sm-8 col-xs-12">
                                        <button class="btn btn-success"> ویرایش اطلاعات </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</main>

