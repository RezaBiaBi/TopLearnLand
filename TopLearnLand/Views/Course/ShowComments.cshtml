@using TopLearnLand_Core.Convertors
@model Tuple<List<TopLearnLand_DataLayer.Entities.Course.CourseComments>, int>
@{
    Layout = null;
}

@foreach (var comment in Model.Item1)
{
    <!-- row -->
    <div class="comment-row">
        <img src="/UserAvatar/@comment.User.UserAvatar">
        <div class="left-col">
            <h3> @comment.User.UserName </h3>
            <span>@comment.CreateCommentDate.ToShamsiDate()</span>
            <p>@comment.Comment</p>
        </div>
    </div>
    <!-- /row -->
}

